 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner slider">
    <div class="carousel-item active">
      <img class="d-block w-100" src="images/slide1.jpg" alt="First slide">
    </div>
    <div class="carousel-item slider">
      <img class="d-block w-100" src="images/slide2.jpg" alt="Second slide">
    </div>
    <div class="carousel-item slider">
      <img class="d-block w-100" src="images/slide3.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div id="success" class="alert alert-success {{#if noMessage}}invisible{{/if}}">
            {{ successMgs }}
        </div>
    </div>
</div>
<!-- deals with the front page products -->
{{# each products }}
    <div class="row">
        {{# each this}}<!-- here this signifies for each element in the chunk of size 3 -->
            <div class="col-sm-6 col-md-4 main"><!-- refer this class from here https://www.w3schools.com/bootstrap/tryit.asp?filename=trybs_grid_stacked_to_hor&stacked=h -->
                <div class="card thumbnail" style="width: 20rem;">
                    <img class="card-img-top shop-image  img-fluid" src="{{ this.imagePath }}" alt="Card image cap">
                    <div class="card-block">
                        <h4 class="card-title">{{ this.title }}</h4>
                        <p class="card-text description">
                            {{ this.description }}
                        </p>
                        <div class="clearfix">
                            <div class="price pull-left">Rs. {{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-raised btn-success pull-right"><!--when button clicked go to add to cart -->
                                <i class="fa fa-plus" aria-hidden="true"></i> Add to cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
    {{/each}}
    </div>
{{/each}}
